{
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true
  },
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true,
    "es6": true
  },
  "rules": {
    //recommended
    "comma-dangle": [2, "never"],
    "no-cond-assign": [2, "always"],
    //"no-console": 2,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 2,
    "no-empty": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 0,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-jsdoc": 2,
    "valid-typeof": 2,


    //best practises
    "curly": 2,
    "eqeqeq": 2,
    "no-alert": 2,
    "no-invalid-this": 2,
    "no-multi-str": 2,
    "radix": 2,
    "yoda": [2, "never"],
    "no-fallthrough": 2,
    "no-redeclare": 2,
    "no-octal": 2,
    "guard-for-in": 2,
    "consistent-return": 2,
    "default-case": 2,
    "no-labels": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-self-compare": 2,
    "no-useless-concat": 2,
    "no-useless-call": 2,
    "no-proto": 2,
    "no-new-wrappers": 2,
    "no-extra-bind": 2,
    "no-with": 2,
    "no-param-reassign": [2, {"props": true}],


    //ECMA 2015
    "arrow-body-style": [2, "as-needed"],
    "arrow-spacing": 2,
    "arrow-parens": [2, "always"],
    "constructor-super": 2,
    "no-confusing-arrow": ["error", {"allowParens": false}],
    "no-class-assign": 2,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 2,
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 0,
    "prefer-spread": 2,
    "prefer-template": 2,
    "require-yield": 2,


    //Stylistic Issues
    "semi": [2, "always"],
    "quotes": [2, "single"],
    "no-mixed-spaces-and-tabs": 2,
    "brace-style": [2, "1tbs"],
    //"camelcase": 1,
    "indent": [1, 4],
    "no-trailing-spaces": 2,


    //Variables
    "no-delete-var": 2,
    "no-undef": 0,
    "no-unused-vars": 1,
    "no-label-var": 2,
    "no-shadow": 2,
    "no-use-before-define": [2, "nofunc"],


    //React
    //"react/jsx-boolean-value": 2,
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-max-props-per-line": 0,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-no-undef": 2,
    "jsx-quotes": [2, "prefer-double"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-danger": 2,
    "react/no-did-mount-set-state": [2, "allow-in-func"],
    "react/no-did-update-set-state": 2,
    "react/no-multi-comp": 2,
    "react/no-unknown-property": 2,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 2,
    "react/self-closing-comp": 2,
    "react/sort-comp": 0,
    "react/wrap-multilines": 1
  }
}